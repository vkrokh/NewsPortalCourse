{% extends 'base.html.twig' %}
{% block title %}Category news!{% endblock %}
{% block body %}

    {% for qnews in  news %}
        <article>
            <h3 class="title-bg"><a href="blog-single.htm">{{ qnews['name'] }}</a></h3>
            <div class="post-summary">
                <p>
                    {{ (qnews['description'])|descriptionFilter() }}

                </p>
                <div class="post-summary-footer">
                    <button class="btn btn-small btn-inverse" type="button"><a
                                href="{{ path('news', {'newsname': qnews['id']}) }}">Read more</a></button>
                    <ul class="post-data">
                        <li><i class="icon-calendar"></i> {{ qnews['created_at'] }}</li>
                        <li><i class="icon-user"></i>Admin</li>
                    </ul>
                </div>
            </div>
        </article>
    {% endfor %}

    <div class="navigation">
        {{ knp_pagination_render(news) }}
    </div>
{% endblock %}

{% block category %}
     <h5 class="title-bg">Categories</h5>
     <ul class="post-category-list">
         {% for qcategory in category %}
             <li><a href="{{ path('category', {'categoryId': qcategory.id }) }}"><i
                             class="icon-plus-sign"></i>{{ qcategory.name }}</a></li>
         {% endfor %}
     </ul>
 {% endblock %}


