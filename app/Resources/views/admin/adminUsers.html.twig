{% extends 'base.html.twig' %}

{% block title %}{{ 'user.list'|trans }}{% endblock %}

 {% block javascripts %}
     <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
     <script src="{{ asset('js/ajaxGrid.js') }}" type="text/javascript"></script>
 {% endblock %}
{% block body %}
    <div class="admin-news">
        <h1 class="text-center">{{ 'user.list'|trans }}</h1>
        <button class="btn btn-small btn-inverse" type="button"><a
                    href="{{ path('user_create') }}">{{ 'create.new'|trans }}</a></button>
        <div id="entities-grid">
        </div>
        <div id="pagination-wrapper" class="zui-pager col-md-12 col-xs-12 col-sm-12 col-lg-12 text-center">
        </div>
    </div>
    <script>
        $("#entities-grid").ajaxgrid({
            dataUrl: "/ajax/user",
            editUrl: "/{{ app.request.getLocale() }}/user/edit/",
            columnsName: ["{{ 'id'|trans }}", "{{ 'user.email'|trans }}",
                "{{ 'name'|trans }}", "{{ 'enabled'|trans }}",
                "{{ 'dispatch'|trans }}", "{{ 'user.roles'|trans }}", "{{ 'edit'|trans }}"],
            sortableColumns: ["id", "email", "name", "enabled", "dispatch",
                "roles"],
            filterableColumns: ["id", "email", "name", "enabled", "dispatch",
                "roles"],
            rowsPerPage: 5,
            key: 'user'
        });
    </script>
{% endblock %}
{% block rigthMenu %}
{% endblock %}
{% block search %}
{% endblock %}