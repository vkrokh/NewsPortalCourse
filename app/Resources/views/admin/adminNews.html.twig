{% extends 'base.html.twig' %}

{% block title %}{{ 'news.list'|trans }}{% endblock %}

 {% block javascripts %}
     <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
     <script src="{{ asset('js/ajaxGrid.js') }}" type="text/javascript"></script>
 {% endblock %}
{% block body %}
    <div class="admin-news">
        <h1 class="text-center">{{ 'news.list'|trans }}</h1>
        <button class="btn btn-small btn-inverse" type="button"><a
                    href="{{ path('news_create') }}">{{ 'create.new'|trans }}</a></button>
        <div id="entities-grid">
        </div>
        <div id="pagination-wrapper" class="zui-pager col-md-12 col-xs-12 col-sm-12 col-lg-12 text-center">
        </div>
    </div>
    <script>
        $("#entities-grid").ajaxgrid({
            dataUrl: "/ajax/news",
            editUrl: "/{{ app.request.getLocale() }}/news/edit/",
            columnsName: ["{{ 'id'|trans }}", "{{ 'name'|trans }}",
                "{{ 'description'|trans }}", "{{ 'date'|trans }}",
                "{{ 'author'|trans }}", "{{ 'count.of.view'|trans }}", "{{ 'edit'|trans }}"],
            sortableColumns: ["id", "name", "description", "createdAt", "user",
                "numberOfViews"],
            filterableColumns: ["id", "name", "description", "createdAt", "user",
                "numberOfViews"],
            rowsPerPage: 5,
            key: 'news'
        });
    </script>
{% endblock %}
