<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}
        <link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.css') }}">
        <link rel="stylesheet" href="{{ asset('css/custom-styles.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% block javascripts %}

    {% endblock %}
</head>

<body>

<div class="container main-container">

    <div class="row header">

        <div class="span5 logo">
            <a href="{{ path('category', {'categoryId': '1'}) }}"> <h5>News Portal</h5></a>
        </div>

        <div class="span7 navigation">
            <div class="navbar">
                <ul class="nav">
                    {% if app.user %}
                        <li>
                            <a href="{{ path('user_logout') }}">
                                <i class="fa fa-sign-out" aria-hidden="true"></i> Main
                            </a>
                        </li>
                        {% if is_granted('ROLE_CONTENT_MANAGER') %}
                            <li class="dropdown active">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="">Admin <b
                                            class="caret"></b></a>
                                <ul class="dropdown-menu">
                                </ul>
                            </li>
                        {% endif %}
                        <li>
                            <a href="{{ path('user_logout') }}">
                                <i class="fa fa-sign-out" aria-hidden="true"></i> Logout
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    <div class="container main-container">
        <div class="row">
            <div class="span8 blog">
                {% block body %}
                {% endblock %}
            </div>
            {% if app.user %}
                <div class="span4 sidebar">
                    <section>
                        <div class="input-append">
                            <form action="#">
                                <input id="appendedInputButton" size="16" type="text" placeholder="Search">
                                <button class="btn" type="button">Search</button>
                            </form>
                        </div>
                    </section>
                    {% block category %}
                    {% endblock %}
                </div>
            {% endif %}
        </div>
    </div>
    {% block footer %}
        <footer>
            <div class="container">
                <div class="row">
                    <div id="footer-resources" class="col-md-6">
                    </div>
                </div>
            </div>
        </footer>
    {% endblock %}
</div>
</body>
</html>