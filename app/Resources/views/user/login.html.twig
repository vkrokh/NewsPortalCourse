{% extends 'base.html.twig' %}

{% block title %}{{ 'psignin'|trans }}{% endblock %}
{% block body %}
    <div class="container pagination-centered form-group">
        {% for flashMessage in app.session.flashbag.get('message') %}
            <div class="alert alert-danger">
                {{ flashMessage }}
            </div>
        {% endfor %}
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <form action="{{ path('user_login') }}" method="post">
            <label class="control-label" for="username" value="Email">{{ 'user.email'|trans }}</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}"/>
            <label class="control-label" for="password">{{ 'form.user.password'|trans }}</label>
            <input type="password" id="password" name="_password" class="form-control"/>
            <label class="control-label"></label>
            <button type="submit" class="form-control btn-success">{{ 'login'|trans }}</button>
        </form>
        <a href="{{ path('user_register') }}">
            {{ 'rsignup'|trans }}
        </a>
        {{ 'or'|trans }}
        <a href="{{ path('user_restore_view') }}">
            {{ 'restore.email'|trans }}
        </a>
    </div>
{% endblock %}


{% block category %}
{% endblock %}